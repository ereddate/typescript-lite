{
  "name": "typescript-lite",
  "version": "1.0.0",
  "description": "轻量级TypeScript类型检查工具，保留TypeScript核心功能，提供更轻量的使用体验",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "tsl": "bin/tsl.js"
  },
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./src/index.js"
    }
  },
  "scripts": {
    "test": "node test/index.js",
    "check": "node bin/tsl.js check",
    "compile": "node bin/tsl.js compile"
  },
  "dependencies": {
    "acorn": "^8.11.3",
    "acorn-typescript": "^1.4.13",
    "chalk": "^4.1.2",
    "escodegen": "^2.1.0",
    "estraverse": "^5.3.0",
    "minimist": "^1.2.8"
  },
  "keywords": [
    "typescript",
    "type-checker",
    "compiler",
    "type-checking",
    "static-analysis",
    "vue",
    "react",
    "vite",
    "webpack",
    "lightweight",
    "fast",
    "type-safety"
  ],
  "author": "ereddate",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "src",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ereddate/typescript-lite.git"
  },
  "bugs": {
    "url": "https://github.com/ereddate/typescript-lite/issues"
  },
  "homepage": "https://github.com/ereddate/typescript-lite#readme"
}
